<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('../partials/head') %>
  <title>Cadastro - UserSync Academy</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap">
  <link rel="shortcut icon" href="/img/cadastro-icon.png" type="image/x-icon">
  <link rel="stylesheet" href="css/cadastro.css">
</head>
<body>
  
<br><br>
  <main class="px-4">
    <form id="form-cadastro">
      <div class="mt-3">
        <!-- <img id="logo" src="/img/logo.png"> -->
        <h2>Cadastro</h2>
        <hr>
        <div class="grid-column-2 mb-3">
          <div>
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Meu Nome" aria-describedby="nome-error">
            <div id="nome-error" class="invalid-feedback"></div>
          </div>
          <div>
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email@gmail.com" aria-describedby="email-error">
            <div id="email-error" class="invalid-feedback"></div>
          </div>
        </div>

        <div class="grid-column-3 mb-3">
          <div>
            <label for="cpf" class="form-label">CPF</label>
            <input type="number" class="form-control" id="cpf" name="cpf" placeholder="00000000000" aria-describedby="cpf-error">
            <div id="cpf-error" class="invalid-feedback"></div>
          </div>
          <div>
            <label for="dataNasc" class="form-label">Data de Nascimento</label>
            <input type="date" class="form-control" id="dataNasc" name="dataNasc" aria-describedby="dataNasc-error">
            <div id="dataNasc-error" class="invalid-feedback"></div>
          </div>
          <div class="align-self-end">
            <p>Sexo</p>
            <input type="radio" name="sexo" id="masculino" value="M" checked>
            <label for="masculino" class="form-label">Masculino</label>

            <input type="radio" name="sexo" id="feminino" value="F">
            <label for="feminino">Feminino</label>
          </div>
        </div>

        <div class="grid-column-2 mb-3">
          <div>
            <label for="estadoCivil" class="form-label">Estado Civil</label>
            <select class="form-select" id="estadoCivil" name="estadoCivil">
              <option value="solteiro(a)" selected>Solteiro(a)</option>
              <option value="casado(a)">Casado(a)</option>
              <option value="separado(a)">Separado(a)</option>
              <option value="divorciado(a)">Divorciado</option>
              <option value="viúvo(a)">Viúvo(a)</option>
            </select>
          </div>
          <div>
            <label for="telefone" class="form-label">Telefone</label>
            <input type="number" class="form-control" id="telefone" name="telefone" placeholder="(00) 0 0000-0000" aria-describedby="rendaMensal-error">
            <div id="telefone-error" class="invalid-feedback"></div>
          </div>
        </div>
      </div>

      <div class="mt-5">
        <h2>Endereço</h2>
        <hr>
        <div class="grid-column-2 mb-3">
          <div>
            <label for="logradouro" class="form-label">Logradouro</label>
            <input type="text" class="form-control" id="logradouro" name="logradouro" placeholder="Av. Paulista" aria-describedby="logradouro-error">
            <div id="logradouro-error" class="invalid-feedback"></div>
          </div>
          <div class="grid-column-2">
            <div>
              <label for="numero" class="form-label">Número</label>
              <input type="number" class="form-control" id="numero" name="numero" placeholder="Nº" min="0" aria-describedby="numero-error">
              <div id="numero-error" class="invalid-feedback"></div>
            </div>
            <div>
              <label for="complemento" class="form-label">Complemento</label>
              <input type="text" class="form-control" id="complemento" name="complemento" placeholder="Casa, Apto, Loja" aria-describedby="complemento-error">
              <div id="complemento-error" class="invalid-feedback"></div>
            </div>
          </div>
        </div>

        <div class="grid-column-2 mb-3">
          <div> <!-- Área dos checks -->
            <label for="cidade" class="form-label">Cidade</label>
            <input type="text" class="form-control" id="cidade" name="cidade" placeholder="São Paulo" aria-describedby="cidade-error">
            <div id="cidade-error" class="invalid-feedback"></div>
          </div>
          <div>
            <label for="bairro" class="form-label">Bairro</label>
            <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Bairro" aria-describedby="bairro-error">
            <div id="bairro-error" class="invalid-feedback"></div>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-primary px-4 mb-3">Enviar</button>
    </form>
  </main>

  <script src="js/cadastro.js"></script>
</body>
</html>
